      <!-- Game Screen -->
      <GameScreen 
        v-else
        :farChanMood="gameState.farChanMood"
        :currentDialogue="currentDialogue"
        :dialogOptions="currentOptions"
        :isFinalScene="isFinalScene"
        :finalEnding="getFinalEnding"
        @selectOption="handleOptionSelect"
        @resetGame="resetGame"
